# Backend Environment Variables Example
# Copy this file to .env.backend and configure for your environment

# Hugging Face Token (required for model downloads)
HF_TOKEN=your_huggingface_token_here

# API Settings
API_HOST=0.0.0.0
API_PORT=8003

# Model Settings
DEFAULT_MODEL=Qwen/Qwen3-VL-4B-Instruct
VLLM_BASE_URL=http://vllm-4b:8000/v1

# Storage Settings
UPLOAD_DIR=/app/storage/uploads
DOCUMENT_DIR=/app/storage/documents
LAYOUT_IMAGE_DIR=/app/storage/layout-images
DATABASE_URL=sqlite:////app/storage/app.db

# Logging
LOG_LEVEL=INFO
